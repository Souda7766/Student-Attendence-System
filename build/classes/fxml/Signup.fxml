<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studentsystem.controllers.SignupController"
            prefWidth="400" prefHeight="300">

    <children>
        <Label text="Sign Up" layoutX="160" layoutY="20" style="-fx-font-size: 24px;"/>
        
        <Label text="Username:" layoutX="50" layoutY="70"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="65" prefWidth="200"/>
        
        <Label text="Email:" layoutX="50" layoutY="110"/>
        <TextField fx:id="emailField" layoutX="150" layoutY="105" prefWidth="200"/>
        
        <Label text="Password:" layoutX="50" layoutY="150"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="145" prefWidth="200"/>
        
        <Button text="Sign Up" layoutX="150" layoutY="200" prefWidth="200" onAction="#handleSignup"/>
        
        <Button text="Back to Login" layoutX="150" layoutY="240" prefWidth="200" onAction="#handleBackToLogin"/>
    </children>
</AnchorPane>
