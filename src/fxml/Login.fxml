<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studentattendancesystem.LoginController"
            prefWidth="400" prefHeight="280">

    <children>
        <Label text="Login" layoutX="170" layoutY="20" style="-fx-font-size: 24px;"/>

        <Label text="Username:" layoutX="50" layoutY="80"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="75" prefWidth="200"/>

        <Label text="Password:" layoutX="50" layoutY="120"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="115" prefWidth="200"/>

        <Button text="Login" layoutX="150" layoutY="170" prefWidth="200" onAction="#handleLogin"/>
        <Button text="Sign Up" layoutX="150" layoutY="210" prefWidth="200" onAction="#goToSignup"/>
    </children>
</AnchorPane>
